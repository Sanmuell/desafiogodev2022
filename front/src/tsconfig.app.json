{
    "extends": "../tsconfig.json",
    "compilerOptions": {
        "outDir": "../out-tsc/app",
        "module": "es2015",
        "types": ["node"],
        "noImplicitAny": false,
        "resolveJsonModule": true,
        "allowSyntheticDefaultImports": true
    },
    "exclude": ["src/test.ts", "**/*.spec.ts"],
    "angularCompilerOptions": {
        "enableIvy": true,
        "allowEmptyCodegenFiles": true
    }
}
